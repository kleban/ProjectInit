@using ProjectInit.Repositories.Models

@model IEnumerable<UserListItemModel>

<h1>Користувачі</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FullName</td>
                <td>@u.Email</td>               
                <td>@string.Join(", ", u.Roles)</td>
                <td>
                    <a href="/user/edit/@u.Id">Edit</a>
                    <a href="/user/remove/@u.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>