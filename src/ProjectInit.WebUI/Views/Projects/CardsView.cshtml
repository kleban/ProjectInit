@using ProjectInit.Core.Entities.Projects
@using ProjectInit.WebUI.Helpers
@model List<Project>

@{
    ViewData["Title"] = "Список проєктів";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/projects/create" class="btn btn-success float-end">Додати курс</a>
<div class="float-end" style="width:10px"></div>
<a href="/projects/index?viewtype=@ViewType.Table" class="btn btn-secondary float-end"><i class="fa-solid fa-table"></i> Як таблиця</a>

<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>

<div class="row">
    @foreach(var p in Model) 
    {
        <div class="card mb-3 col-md-3">
            <img class="card-img-top" src="@p.ImagePath" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@p.ProjectName</h5>
                <h6 class="card-subtitle">@p.CourseName</h6>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    }
</div>

